<BizItemSchema itemType="BizItemSchemas" targetItemType="Car">
    <System>
        <Property name="itemType"     caption="Item Type"     type="String" indexed="false" unique="false" constrints="NotNull,Size_1_100"/>
        <Property name="id"           caption="System ID"     type="ObjectId"/>
        <Property name="trackingId"   caption="TrackingID"    type="String" indexed="true"  unique="true" autogenerated="true" constrints="NotNull,Size_1_100"/>
        <Property name="createdDate"  caption="Created Date"  type="Date"   indexed="true"  unique="false" constrints="NotNull"/>
        <Property name="modifiedDate" caption="Modified Date" type="Date"   indexed="true"  unique="false" constrints="NotNull"/>
    </System>

<!--    TODO: remove indexed and unique, set default value as false -->
<!--    TODO: remove item type and set it in the code -->
    <Content>
         <Property name="stringNotNull"      caption="FNotNull"   type="String"  indexed="false" unique="false" constrints="NotNull"/>
         <Property name="stringSize_100"     caption="FSize100"   type="String"  indexed="false" unique="false" constrints="Size_100"/>
         <Property name="stringSize_10_100"  caption="FSize10_100"   type="String"  indexed="false" unique="false" constrints="Size_10_100"/>

         <Property name="pastDate"    caption="PastDate"   type="Date"    indexed="true"  unique="false" constrints="PastDate"/>
         <Property name="futureDate"  caption="futureDate" type="Date"    indexed="true"  constrints="FutureDate"/>

         <Property name="futureYear"  caption="FutureYear" type="Integer" indexed="true"  unique="false" constrints="FutureYear"/>
         <Property name="year"        caption="Year"       type="Integer" indexed="true"  unique="false" constrints="PastYear"/>

         <Property name="millage"     caption="Millage"     type="Integer" indexed="true"  unique="false" constrints="Max_100"/>
         <Property name="millageMin"  caption="MillageMin"  type="Integer" indexed="true"  unique="false" constrints="Min_100"/>

         <Property name="email"       caption="Email"  type="String" indexed="true"  unique="false" constrints="Regex_email"/>

         <Property name="available"   caption="Available"  type="Boolean" indexed="false" unique="false" constrints="BooleanType"/>
         <Property name="maker"       caption="Maker"      type="Enum"    enumName="EnCarMakers" indexed="true" unique="false" constrints="Enum"/>
         <Property name="model"       caption="Model"      type="Enum"    enumName="EnCarModels" indexed="true" unique="false" constrints="Enum"/>
         <Property name="listOfEnums" caption="Enum List"  type="Enum"    enumName="EnCarModels" indexed="false" unique="false" constrints="EnumList"/>
         <Property name="object"      caption="Object"     type="Object"     typeName="Car2"/>
         <Property name="objectList"  caption="ObjectList" type="ObjectList" typeName="Car2"/>
    </Content>
</BizItemSchema>


