<BizItemSchema itemType="BizItemSchemas" targetItemType="Car2">
    <System>
        <Property name="itemType"     caption="Item Type"     type="String" indexed="false" unique="false" constrints="NotNull,Size_1_100"/>
        <Property name="id"           caption="System ID"     type="ObjectId"/>
        <Property name="trackingId"   caption="TrackingID"    type="String" indexed="true"  unique="true" autogenerated="true" constrints="NotNull,Size_1_100"/>
        <Property name="createdDate"  caption="Created Date"  type="Date"   indexed="true"  unique="false" constrints="NotNull"/>
        <Property name="modifiedDate" caption="Modified Date" type="Date"   indexed="true"  unique="false" constrints="NotNull"/>
    </System>

    <Content>
         <Property name="stringNotNull"     caption="FNotNull"    type="String"   indexed="true"  unique="false" constrints="NotNull" />
         <Property name="stringSize_100"    caption="FSize100"    type="String"   constrints="Size_100"/>
         <Property name="stringSize_10_100" caption="FSize10_100" type="String"   constrints="Size_10_100"/>
         <Property name="pastDate"          caption="PastDate"    type="Date"     constrints="PastDate"/>
         <Property name="futureDate"        caption="futureDate"  type="Date"     constrints="FutureDate"/>
         <Property name="futureYear"        caption="FutureYear"  type="Integer"  constrints="FutureYear"/>
         <Property name="year"              caption="Year"        type="Integer"  constrints="PastYear"/>
         <Property name="millage"           caption="Millage"     type="Integer"  constrints="Max_100"/>
         <Property name="millageMin"        caption="MillageMin"  type="Integer"  constrints="Min_100"/>
         <Property name="email"             caption="Email"       type="String"   constrints="Regex_email"/>
         <Property name="available"         caption="Available"   type="Boolean"  constrints="BooleanType"/>
         <Property name="maker"             caption="Maker"       type="Enum"    enumName="EnCarMakers" constrints="Enum"/>
         <Property name="model"             caption="Model"       type="Enum"    enumName="EnCarModels" constrints="Enum"/>
         <Property name="listOfEnums"       caption="Enum List"   type="Enum"    enumName="EnCarModels" indexed="false" unique="false" constrints="EnumList"/>
    </Content>
</BizItemSchema>


